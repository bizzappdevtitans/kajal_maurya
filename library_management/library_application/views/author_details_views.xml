<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_author_details_tree" model='ir.ui.view'>
        <field name="name">author.details.tree</field>
        <field name="model">author.details</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"></field>
                <field name="bio"></field>
            </tree>
        </field>


    </record>

   <record id="view_author_details_form" model="ir.ui.view">
        <field name="name">author.details.form</field>
        <field name="model">author.details</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"></field>
                            <field name="bio"></field>
                            <field name="book_ids" widget="many2many_tags" option="{'no_create_edit':True}"></field>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>

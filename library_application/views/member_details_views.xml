<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_member_details_tree" model="ir.ui.view">
        <field name="name">member.details.tree</field>
        <field name="model">member.details</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence_no"/>
                <field name="name"/>
                <field name="address"/>
                <field name="email" widget="email"/>
                <field name="membership_start_date" widget="date"/>
                <field name="subscription_status"
                    decoration-success="subscription_status == 'active'"
                    decoration-danger="subscription_status == 'inactive'" widget="badge"/>
                <field name="subscription_expiry_date" widget="date"/>
                <field name="book_borrowed_count"/>
            </tree>
        </field>
    </record>

    <record id="view_member_details_form" model="ir.ui.view">
        <field name="name">member.details.form</field>
        <field name="model">member.details</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="sequence_no" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="address"/>
                            <field name="email" widget="email"/>
                            <field name="library_id"/>
                        </group>
                        <group>
                            <field name="membership_start_date" widget="date"/>
                            <field name="subscription_expiry_date" widget="date"/>
                            <field name="subscription_status"/>
                            <field name="bookloan_ids" widget="many2many_tags" option="{'no_create_edit':True}"/>
                        </group>
                    </group>
                </sheet>

            </form>
        </field>
    </record>


    <record id="view_member_details_search" model="ir.ui.view">
        <field name="name">member.details.search</field>
        <field name="model">member.details</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="address"/>
                <field name="email" widget="email"/>
                <field name="membership_start_date" widget="date"/>
                <field name="subscription_status"/>
                <field name="subscription_expiry_date" widget="date"/>
                <filter string="Odhav"  name="address" domain="[('address','=','Odhav')]"/>
                <filter string="Vastral"  name="address" domain="[('address','=','Vastral')]"/>
                <filter string="subscription_status" name="subscription_status" context="{'group_by':'subscription_status'}"/>
                 <searchpanel>
                    <field name="library_id" icon="fa-tasks"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <record id="action_member_details" model="ir.actions.act_window">
        <field name="name">Members</field>
        <field name="res_model">member.details</field>
        <field name="view_mode">tree,form,search</field>
    </record>

</odoo>

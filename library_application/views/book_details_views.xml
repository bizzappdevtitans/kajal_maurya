                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" string="Books" name="book_count"
                            icon="fa-pencil-square-o">
                            <div class="o_stat_info">
                                <field name="book_count" class="o_stat_value"/>
                            </div>
                        </button>
                    </div>
                    <group>
                        <group>
                           <field name="name"/>
                           <field name="biography"/>
                           <field name="book_count"/>
                           <field name="nationality"/>
                        </group>
                        <group>
                            <field name="book_ids" widget="many2many_tags" option="{'no_create_edit':True}"/>
                            <field name="email"/>
                            <field name="award_received"/>
                            <field name="birthday" widget="date"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


